@model JobInterviewQuiz.Model.ViewModels.UserAdminViewModel

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Edit</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("UpdateUser", "Admin", new AjaxOptions { UpdateTargetId = "editUserModalHolder", InsertionMode = InsertionMode.Replace }, new { @id = "EditUserForm", @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="control-label col-sm-2">Username:</label>
                        <div class="col-sm-10">

                            <input type="text" class="form-control hide" id="id" name="Id" value="@Model.Id" readonly="readonly" />
                            <input type="text" class="form-control hide" id="password" name="Password" value="@Model.Password" readonly="readonly" />

                            <input type="text" class="form-control" id="username" name="Username" placeholder="Enter username" value="@Model.Username" />
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter email" value="@Model.Email" />
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Test</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="TestName">
                                @foreach (var testname in ViewBag.Tests)
                                {
                                    if (testname.Name == Model.TestName)
                                    {
                                        <option selected>@testname.Name</option>
                                    }
                                    else
                                    {
                                        <option>@testname.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Status:</label>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(m => Model.ActivStatus)
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Admin:</label>
                            <div class="col-sm-10">
                                @Html.CheckBoxFor(m => Model.IsAdmin)
                            </div>
                        </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="UpdateUser()">Save changes</button>
            </div>
        </div>
    </div>
</div>